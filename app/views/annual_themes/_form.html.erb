<%= form_with(model: annual_theme, class: "contents") do |form| %>
  <% if annual_theme.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= t('annual_themes.form.error_heading', count: annual_theme.errors.count) %></h2>

      <ul>
        <% annual_theme.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :year, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.number_field :year, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-indigo-600 focus:border-transparent" %>
  </div>

  <div class="my-5">
    <%= form.label :kanji, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :kanji, maxlength: 1, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full text-2xl text-center focus:ring-2 focus:ring-indigo-600 focus:border-transparent", placeholder: t('annual_themes.form.kanji_placeholder') %>
    <p class="mt-2 text-sm text-gray-500"><%= t('annual_themes.form.kanji_hint') %></p>
  </div>

  <div class="my-5">
    <%= form.label :meaning, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_area :meaning, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-indigo-600 focus:border-transparent", placeholder: t('annual_themes.form.meaning_placeholder') %>
  </div>

  <div class="my-5">
    <span class="block text-sm font-medium leading-6 text-gray-900"><%= t('annual_themes.form.level.label') %></span>
    <div class="mt-2 flex items-center gap-x-6">
      <div class="flex items-center gap-x-2">
        <%= form.radio_button :level, 2, class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
        <%= form.label :level_2, t('annual_themes.form.level.2_level'), class: "block text-sm font-medium leading-6 text-gray-900" %>
      </div>
      <div class="flex items-center gap-x-2">
        <%= form.radio_button :level, 3, class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
        <%= form.label :level_3, t('annual_themes.form.level.3_level'), class: "block text-sm font-medium leading-6 text-gray-900" %>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit t('common.save'), class: "rounded-lg py-3 px-5 bg-indigo-600 text-white inline-block font-medium cursor-pointer hover:bg-indigo-500" %>
  </div>
<% end %>
