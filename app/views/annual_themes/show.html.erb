<div class="mx-auto w-full max-w-2xl px-4 py-8">
  <div class="mb-8">
    <%= link_to t('annual_themes.new.back'), annual_themes_path, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700" %>
  </div>

  <div class="bg-white shadow sm:rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6 bg-indigo-50 border-b border-indigo-100 flex justify-between items-center">
      <h3 class="text-base font-semibold leading-6 text-indigo-900"><%= t('annual_themes.show.annual_theme', year: @annual_theme.year) %></h3>
      <div>
        <%= link_to t('annual_themes.show.edit'), edit_annual_theme_path(@annual_theme), class: "text-indigo-600 hover:text-indigo-900 font-medium mr-4" %>
        <%= button_to t('annual_themes.show.destroy'), @annual_theme, method: :delete, class: "text-red-600 hover:text-red-900 font-medium bg-transparent border-0 cursor-pointer inline-block", data: { turbo_confirm: t('common.confirm_destroy') } %>
      </div>
    </div>

    <div class="px-4 py-6 text-center border-b border-gray-100 space-x-4">
      <%= link_to t('annual_themes.show.chart'), chart_annual_theme_path(@annual_theme), class: "inline-flex items-center rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <%= link_to t('annual_themes.show.monthly_goals'), annual_theme_monthly_goals_path(@annual_theme), class: "inline-flex items-center rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>

    <div class="px-4 py-8 sm:p-8 text-center">
      <div class="text-9xl font-bold text-gray-900 mb-6">
        <%= @annual_theme.kanji %>
      </div>
      <div class="text-left mx-auto max-w-lg">
        <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2"><%= t('annual_themes.show.meaning_goals') %></h4>
        <p class="text-lg text-gray-900 leading-relaxed whitespace-pre-wrap"><%= @annual_theme.meaning %></p>
      </div>
    </div>
  </div>
</div>
