<div class="mx-auto w-full max-w-2xl px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-bold text-gray-900"><%= t('annual_themes.index.title') %></h1>
    <%= link_to t('annual_themes.index.new_theme'), new_annual_theme_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>

  <div id="annual_themes" class="space-y-4">
    <% @annual_themes.each do |annual_theme| %>
      <div class="bg-white shadow sm:rounded-lg p-6 flex justify-between items-center">
        <div>
          <h2 class="text-xl font-semibold text-gray-900"><%= annual_theme.year %>: <span class="text-3xl"><%= annual_theme.kanji %></span></h2>
          <p class="mt-2 text-gray-600"><%= truncate(annual_theme.meaning, length: 100) %></p>
        </div>
        <div>
          <%= link_to t('annual_themes.index.show'), annual_theme, class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
        </div>
      </div>
    <% end %>
    <% if @annual_themes.empty? %>
       <div class="text-center py-12 bg-white rounded-lg shadow">
          <p class="text-gray-500"><%= t('annual_themes.index.empty') %></p>
       </div>
    <% end %>
  </div>
</div>
