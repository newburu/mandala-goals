<div class="mx-auto w-full max-w-3xl px-4 py-8">
  <div class="mb-8 flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <%= link_to daily_tasks_path(date: @date - 1.day), class: "text-gray-500 hover:text-gray-900" do %>
        ←
      <% end %>
      <h1 class="text-2xl font-bold <%= date_text_color_class(@date) %>"><%= I18n.l(@date) %></h1>
      <%= link_to daily_tasks_path(date: @date + 1.day), class: "text-gray-500 hover:text-gray-900" do %>
        →
      <% end %>
    </div>
    <div class="flex space-x-4 items-center">
      <%= link_to t('daily_tasks.index.today'), daily_tasks_path, class: "text-sm font-semibold text-indigo-600 hover:text-indigo-900" unless @date == Date.current %>
      <%= link_to t('daily_tasks.index.calendar_view'), calendar_daily_tasks_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <!-- Mobile: FAB -->
  <%= link_to new_daily_task_path(date: @date), data: { turbo_frame: "modal" }, class: "md:hidden fixed bottom-6 right-6 h-14 w-14 rounded-full bg-indigo-600 text-white shadow-lg flex items-center justify-center text-3xl hover:bg-indigo-500 z-50 transition-transform active:scale-95" do %>
    <span class="-mt-1">+</span>
  <% end %>

  <!-- PC: Inline Form -->
  <div class="hidden md:block mb-8 bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold mb-4"><%= t('daily_tasks.index.new_task') %></h2>
    <%= render 'form', daily_task: @daily_task, monthly_goals: @monthly_goals %>
  </div>

  <div id="daily_tasks" class="space-y-4">
    <%= render @daily_tasks %>
    <% if @daily_tasks.empty? %>
      <div id="empty_daily_tasks" class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-200">
        <p class="text-gray-500"><%= t('daily_tasks.index.empty') %></p>
      </div>
    <% end %>
  </div>
</div>

<turbo-frame id="modal" target="_top"></turbo-frame>
