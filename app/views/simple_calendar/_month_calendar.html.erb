<div class="simple-calendar bg-white rounded-xl shadow-lg ring-1 ring-gray-900/5">
  <div class="calendar-heading flex items-center justify-between px-6 py-4 border-b border-gray-200 bg-gray-50/50 rounded-t-xl">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title text-xl font-bold text-gray-900"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>

    <nav class="flex items-center gap-x-2">
      <%= link_to calendar.url_for_previous_view, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <span>&larr; Previous</span>
      <% end %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= link_to calendar.url_for_next_view, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <span>Next &rarr;</span>
      <% end %>
    </nav>
  </div>

  <table class="table w-full border-collapse table-fixed">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <% 
            header_classes = "py-3 px-2 text-center text-sm font-semibold border-b border-gray-200 "
            if day.sunday?
              header_classes += "text-red-600 bg-red-50/50"
            elsif day.saturday?
              header_classes += "text-blue-600 bg-blue-50/50"
            else
              header_classes += "text-gray-900 bg-gray-50/50"
            end
          %>
          <th class="<%= header_classes %>"><%= t('date.day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200 bg-white">
      <% date_range.each_slice(7) do |week| %>
        <tr class="divide-x divide-gray-200">
          <% week.each do |day| %>
            <% 
              is_holiday = Holidays.on(day, :jp).any?
              cell_classes = calendar.td_classes_for(day)
              base_classes = "h-32 p-2 align-top transition-colors duration-200 ease-in-out relative group"
              
              if day.sunday? || is_holiday
                bg_class = "bg-red-50/30 hover:bg-red-50/60"
                text_class = "text-red-900"
              elsif day.saturday?
                bg_class = "bg-blue-50/30 hover:bg-blue-50/60"
                text_class = "text-blue-900"
              else
                bg_class = "hover:bg-gray-50"
                text_class = ""
              end
            %>
            <%= content_tag :td, class: [cell_classes, base_classes, bg_class, text_class].join(" ") do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
