<% grid_pos = params[:grid_position].presence || "default" %>
<%= turbo_frame_tag dom_id(@mandala_item, "grid_#{grid_pos}") do %>
  <div class="h-full w-full p-1">
    <%= form_with(model: @mandala_item, class: "h-full flex flex-col justify-center") do |form| %>
      <%= form.text_area :content,
          class: "w-full h-full text-center border-0 p-1 bg-white focus:ring-2 focus:ring-indigo-500 resize-none rounded text-lg",
          placeholder: t('mandala_items.placeholder'),
          autofocus: true,
          onblur: "this.form.requestSubmit()" %>
    <% end %>
  </div>
<% end %>
